{
  "permissions": {
    "allow": [
      "Read",
      "Edit(docs/**)",
      "Edit(src/**)",
      "Edit(output/**)",
      "Edit(STATUS.md)",
      "Edit(Questions_For_You.md)",
      "Write(docs/**)",
      "Write(src/**)",
      "Write(output/**)",
      "Write(tests/**)",
      "Write(STATUS.md)",
      "Bash(python *)",
      "Bash(npm test*)",
      "Bash(npm run*)",
      "Bash(pytest*)",
      "Bash(mkdir *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(dir \"%USERPROFILE%\\\\.claude\\\\projects\" /b)",
      "Bash(cmd /c \"dir %USERPROFILE%\\\\.claude\\\\projects /b\")"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(del /s *)",
      "Bash(format *)",
      "Bash(git push*)",
      "Bash(git reset --hard*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/mcp-reminder.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/branch-protection.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/file-guard.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-planning-check.sh",
            "description": "Remind to run prompt-understanding before planning"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/findings-reminder.sh"
          }
        ]
      },
      {
        "matcher": "Glob",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/findings-reminder.sh"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/findings-reminder.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/quality-gates.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/quality-gates.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/phase-completion-check.sh",
            "description": "Remind to run output-validation before completion"
          }
        ]
      }
    ]
  }
}
