  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/prompt-handler.sh",
            "description": "MCP-first reminder + plan re-read on major decisions"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-tool-guard.sh",
            "description": "Branch protection, file guard, domain understanding check"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Grep|Glob|Read|WebSearch|WebFetch|Task|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-tool-handler.sh",
            "description": "2-Action Rule, quality gates, validation reminders"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-end-check.sh",
            "description": "Verify completion, STATUS.md updated, cost report reminder"
          }
        ]
      }
    ]
